{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*"
      ]
    },
    "lib": [
      "es2017"
    ],
    "typeRoots": [
      "node_modules/@types",
      "./@types"
    ]
  },
  "include": [
    "src/**/*.ts",
    "module/**/*.ts",
    "**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}